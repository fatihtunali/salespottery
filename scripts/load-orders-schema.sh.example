#!/bin/bash

# Load orders schema to MySQL server

SERVER="user@your-server-ip"
DB_USER="your_db_user"
DB_PASS="your_db_password"
DB_NAME="your_db_name"

echo "📤 Copying orders schema to server..."
scp database/orders-schema.sql $SERVER:~/orders-schema.sql

echo "🗄️  Executing orders schema on MySQL..."
ssh $SERVER "mysql -u $DB_USER -p'$DB_PASS' $DB_NAME < ~/orders-schema.sql && rm ~/orders-schema.sql"

echo "✅ Orders schema loaded successfully!"
