#!/bin/bash

# Load currencies schema to MySQL server

SERVER="user@your-server-ip"
DB_USER="your_db_user"
DB_PASS="your_db_password"
DB_NAME="your_db_name"

echo "📤 Copying currencies schema to server..."
scp database/currencies-schema.sql $SERVER:~/currencies-schema.sql

echo "🗄️  Executing currencies schema on MySQL..."
ssh $SERVER "mysql -u $DB_USER -p'$DB_PASS' $DB_NAME < ~/currencies-schema.sql && rm ~/currencies-schema.sql"

echo "✅ Currencies schema loaded successfully!"
